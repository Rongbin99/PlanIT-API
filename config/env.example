# ========================================
# PlanIT Backend Environment Configuration
# ========================================

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
# Add your frontend URLs here (comma-separated for multiple origins)
# * Add EXPO and IP-BASED origins as needed
ALLOWED_ORIGINS=http://localhost:8081

# API Configuration
API_VERSION=1.0.0
API_RATE_LIMIT=100

# Logging Configuration
LOG_LEVEL=debug

# PostgreSQL Database Configuration
DATABASE_URL=
DB_HOST=localhost
DB_PORT=5432
DB_NAME=planit_db
DB_USER=
DB_PASSWORD=
DB_SSL=false

# Redis Configuration (for caching)
REDIS_URL=
UNSPLASH_CACHE_TTL=3600

# External API Keys (for AI services, maps, etc.)
OPENAI_API_KEY=
UNSPLASH_API_KEY=
