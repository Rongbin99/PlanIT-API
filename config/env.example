# ========================================
# PlanIT Backend Environment Configuration
# ========================================

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
# Add your frontend URLs here (comma-separated for multiple origins)
ALLOWED_ORIGINS=http://localhost:19006,exp://localhost:19000,http://localhost:3000

# API Configuration
API_VERSION=1.0.0
API_RATE_LIMIT=100

# Logging Configuration
LOG_LEVEL=debug

# Database Configuration (when you add a database)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=planit_db
# DB_USER=planit_user
# DB_PASSWORD=your_secure_password

# Redis Configuration (for caching/sessions)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password

# External API Keys (for AI services, maps, etc.)
OPENAI_API_KEY=your_openai_api_key_here
# GOOGLE_MAPS_API_KEY=your_google_maps_api_key
# PLACES_API_KEY=your_places_api_key

# Authentication (when you add auth)
# JWT_SECRET=your_jwt_secret_key
# JWT_EXPIRES_IN=7d
# BCRYPT_ROUNDS=12

# File Upload Configuration
# MAX_FILE_SIZE=10485760
# UPLOAD_DIR=uploads

# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Monitoring & Analytics
# SENTRY_DSN=your_sentry_dsn
# ANALYTICS_ID=your_analytics_id

# Security Configuration
# HELMET_ENABLED=true
# RATE_LIMIT_WINDOW=15
# RATE_LIMIT_MAX=100 